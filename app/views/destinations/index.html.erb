<h1>Your Destinations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destinations.each do |destination| %>
      <tr>
        <td><%= link_to destination.name, destination %></td>
        <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
        <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Choose A Destination', new_destination_path %>

<!-- Navionics API -->

   <script type="text/javascript" src="http://webviewer-api.navionics.com/static/js/proj4js/lib/proj4js-compressed.js"></script>
   <script type="text/javascript" src="http://webviewer-api.navionics.com/static/js/OpenLayers/OpenLayers.js"></script>
   <script type="text/javascript" src="http://webviewer-api.navionics.com/static/js/navionics/apimaps.js"></script>

   <!--body onload="startmap()" -->
   <body onload="init()" >
       <h1> Navionics Map</h1>
       <div id="mymap" class="NavionicsMap" style="width:60%; height:70%; border: 1px solid black"> </div>
       <script>
       // use body onload="startmap()" to starts all maps on load
       key = '1234567890'
       function init(){
       var mapOptions = {
       center: { lon: -64.5431, lat: 18.4456},
       zoom: 12
       }
       var map = new NavionicsMap("mymap", key, mapOptions);
       /*
      * You can also set the center and the zoom level manually just calling these methods
       map.setCenter(10, 43);
       map.setZoom(4);
       */

       return map
       }
       </script>
   </body>

